{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": false,
        "outDir": "build",
        "allowJs": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}